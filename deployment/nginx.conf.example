# Configuration Nginx pour Loterie de Noël
# 
# Installation:
#   - Copier ce fichier vers /etc/nginx/sites-available/loterie-noel
#   - Créer un lien symbolique: sudo ln -s /etc/nginx/sites-available/loterie-noel /etc/nginx/sites-enabled/
#   - Tester: sudo nginx -t
#   - Recharger: sudo systemctl reload nginx
#
# Variables à adapter:
#   - server_name: votre domaine
#   - root: chemin vers le dossier dist/ de Nuxt
#   - proxy_pass: URL du backend Apollo (par défaut localhost:4000)

# Redirection HTTP vers HTTPS (décommenter si vous avez HTTPS)
# server {
#     listen 80;
#     server_name votre-domaine.com www.votre-domaine.com;
#     return 301 https://$server_name$request_uri;
# }

server {
    listen 80;
    # Pour HTTPS, décommenter et configurer:
    # listen 443 ssl http2;
    # ssl_certificate /etc/letsencrypt/live/votre-domaine.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/votre-domaine.com/privkey.pem;
    
    server_name votre-domaine.com www.votre-domaine.com;
    
    # Chemin vers les fichiers statiques Nuxt (après build)
    root /chemin/vers/votre/projet/dist;
    index index.html;
    
    # Taille maximale des uploads
    client_max_body_size 10M;
    
    # Headers de sécurité
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Logs
    access_log /var/log/nginx/loterie-noel-access.log;
    error_log /var/log/nginx/loterie-noel-error.log;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;
    
    # Proxy pour GraphQL (backend Apollo)
    location /graphql {
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Servir les fichiers statiques Nuxt
    location / {
        try_files $uri $uri/ /index.html;
        
        # Cache pour les assets statiques
        location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # Bloquer l'accès aux fichiers sensibles
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ \.(env|log|md|sh)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Gestion des erreurs
    error_page 404 /index.html;
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}

# Configuration pour HTTPS (Let's Encrypt avec Certbot)
# Après avoir installé Certbot: sudo certbot --nginx -d votre-domaine.com
# Certbot modifiera automatiquement cette configuration

